body {
    background: #ccc;
    margin: 0;
}

header {
    position: relative;
    text-align: center;
    max-width: 100%;

    /*
     * The padding controls the aspect ratio of the background video.
     * 9 / 16 = 56.25% is 16:9, 50% 0 2:1 etc.
    */
    padding-top: 30%
}

body, button, h1, h2, h3 {
    font-family: 'Open Sans';
    font-weight: 300;
}

h1, h2.subheader {
    color: white;
    text-align: center;
    text-shadow: 2px 2px #222;
    margin: 10px;
}

h1 {
    font-size: 5em;
}

a {
    color: #00a3ff;
}

a.invisible-link {
    text-decoration: none;
    color: inherit;
}

a.call-to-action {
    font-size: 2em;
    background: #00a3ff;
    color: black;
    cursor: pointer;
    text-decoration: none;
}

#video {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background: rgb(0, 35, 74);
}

.video-overlay {
    position: absolute;
    bottom: 30px;
    width: 100%;
}

section p {
    margin: 20px;
}

section {
    max-width: 880px;
    margin: 0 auto;
}






.feature {
    width: 400px;
    margin: 20px;
    display: inline-block;
    text-align: left;
}

.feature h3 {
    margin-bottom: 0;
}

.feature p {
    margin-top: 10px;
}

section#more-details  {
    text-align: center;
    max-width: 1000px;
}
.formfield {
    display: inline-block;
    width: 300px;
    margin-bottom: 10px;
    margin-left: 50px;
    vertical-align: top;
}

.formfield label {
    display: block;

}
.formfield input, select {
    font-size: 1.2em;
    margin-bottom: 4px;
}
